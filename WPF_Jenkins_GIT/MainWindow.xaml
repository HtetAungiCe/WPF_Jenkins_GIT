<Window x:Class="WPF_Jenkins_GIT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Jenkins_GIT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="50" Orientation="Vertical" VerticalAlignment="Center">

        <StackPanel Orientation="Horizontal" >
            <Label Content="Name"  FontSize="50px"/>
            <TextBox x:Name="txt_name"
                  IsEnabled="True"
                     Margin="30 10 10 10"
                  Width="500px"
                  FontSize="50px"
                  HorizontalAlignment="Center"/>
        </StackPanel>

        <Button Margin="20"
                Content="Greeting "
                FontSize="40px"
                Width="200"             
                Height="80" Click="Button_Click"/>



    </StackPanel>
</Window>
